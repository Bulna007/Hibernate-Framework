<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping package="com.hb3bs.entities">
	<class name="Policy" table="policy">
		<id name="policyNo">
			<column name="policy_no"/>
		</id>
		<property name="policyHolderName">
			<column name="policy_holder_nm"/>
		</property>
		<property name="policyName">
			<column name="policy_nm"/>
		</property>
		<property name="premiumAmount">
			<column name="premium_amount"/>
		</property>
		<property name="insurredAmount">
			<column name="insurred_amount"/>
		</property>
		<property name="tenure"/>
	</class>
</hibernate-mapping>